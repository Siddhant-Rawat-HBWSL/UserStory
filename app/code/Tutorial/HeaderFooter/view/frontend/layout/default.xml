<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <!-- This will add the code in template inside the <head> tag -->
        <referenceContainer name="head.additional" >
            <block name="header_footer_default" 
                    template="Tutorial_HeaderFooter::head_additional/default.phtml"
                    class="Magento\Framework\View\Element\Template" />
        </referenceContainer>

        <!-- This will add the code in template inside the <body> tag after it starts -->
        <referenceContainer name="after.body.start" >
            <block name="after_body_start_default_script" 
                    template="Tutorial_HeaderFooter::body_start/default_script.phtml"
                    class="Magento\Framework\View\Element\Template" />
        </referenceContainer>

        <!-- This will add the code in template inside the <body> tag before it ends -->
        <referenceContainer name="before.body.end" >
            <block name="before_body_end_default_script" 
                    template="Tutorial_HeaderFooter::body_end/default_script.phtml"
                    class="Magento\Framework\View\Element\Template" />
        </referenceContainer>
    </body>
</page>
