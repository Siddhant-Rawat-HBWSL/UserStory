<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="employee_table" resource="default" engine="innodb" comment="Employee Product Table">

        <column xsi:type="int" name="id" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="first"  nullable="false" comment="Employee First Name"/>
        <column xsi:type="varchar" name="last" nullable="false" comment="Employee Last Name" />
        <column xsi:type="varchar" name="email" nullable="false" comment="Employee Email" />
        <column xsi:type="varchar" name="address" nullable="false" comment="Employee Address" />
        <column xsi:type="varchar" name="phone" nullable="false" comment="Employee Phone Number" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

    </table>
</schema>